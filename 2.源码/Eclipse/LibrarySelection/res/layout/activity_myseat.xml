<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <RelativeLayout 
        android:id="@+id/edituser_rela_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        style="@style/titlecontainerstyle">
        <ImageView 
            android:id="@+id/myseat_img_quit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrowthinleft"/>
         <TextView 
	        android:id="@+id/myseat_tv_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="我的座位"
	         android:layout_centerVertical="true"
            android:layout_toRightOf="@id/myseat_img_quit"
	        style="@style/titlefontstyle"/>
    </RelativeLayout>
   

       	<!-- recycleview -->
   	<android.support.v7.widget.RecyclerView
   	    android:id="@+id/myseat_recycleview"
   	    android:layout_width="match_parent"
   	    android:layout_height="match_parent">
   	    
   	</android.support.v7.widget.RecyclerView>
</LinearLayout>
